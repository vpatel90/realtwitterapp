<!DOCTYPE html>
<html>
<head>
  <title>Twitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper container">
      <%= link_to "Chattr", root_path, class:"brand-logo" %>
      <ul class="right">

         <% if signed_in? %>
           <li>
             <%= link_to "Log Out", sign_out_path %>
           </li>
           <li>
             <%= link_to "Hello, $ #{current_user.handle}", user_path(current_user.id) %>
           </li>
         <% else %>
           <li>
             <%= link_to "Log In", sign_in_path %>
           </li>
           <li>
             <%= link_to "New User", new_user_path %>
           </li>
         <% end %>
      </ul>

    </div>
  </nav>
</div>

<div class="main-page container">
  <% if signed_in? %>
    <div class="container">
      <%= form_tag '/thoughts', remote:true, id:"new-thought", method: :POST do %>
        <div class="row">
          <%= label_tag :body, "New Thought"%>
        </div>
        <div class="row">
          <div class="col s10 m10 l10">
          <%= text_field_tag :body, nil, class: "user-form", autofocus: true %>
          </div>
          <div class="right">
          <%= submit_tag "Share", class: "btn btn-color" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<%= yield %>
</div>

</body>
</html>
