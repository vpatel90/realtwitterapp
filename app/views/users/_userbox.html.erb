

<div class="col s12 m12 l12">
  <div class="row">
    <div class="col s2 m2 l2 profile-pic-center">
      <div class="pic-border">
      <img class="responsive-img circle profile-pic" src="<%= user.pic %>"></div>
    </div>
    <div class="col s7 m7 l7">
      <p><%= link_to "@#{user.handle}", user_path(user.id), class:"link-color" %></p>
    </div>

    <div class="col s3 m3 l3">
      <p class="chattr-logo"> <i class="fa fa-comment" aria-hidden="true"></i>
        <%= user.thoughts_count %></p>
    </div>
  </div>
</div>
